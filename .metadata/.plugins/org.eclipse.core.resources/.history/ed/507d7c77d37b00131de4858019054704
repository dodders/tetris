package com.gd.tetris;

import java.io.IOException;
import java.io.InputStream;
import java.nio.file.Files;
import java.nio.file.Path;
import java.nio.file.Paths;
import java.nio.file.StandardOpenOption;
import java.util.Properties;

import javafx.application.Application;
import javafx.fxml.FXMLLoader;
import javafx.scene.Scene;
import javafx.scene.layout.Pane;
import javafx.scene.layout.TilePane;
import javafx.scene.paint.Color;
import javafx.scene.shape.Rectangle;
import javafx.stage.Stage;

public class Main extends Application {

	Properties props;
	TilePane grid = new TilePane();
	
	@Override
	public void start(Stage primaryStage) throws IOException {
		init();
		primaryStage.setTitle("Tetris - JavaFX");
		Scene scene = new Scene(grid);
		primaryStage.setScene(scene);
		primaryStage.show();
	}

	public static void main(String[] args) {
		launch(args);
	}
	
	public void init() throws IOException {
		log("starting...");
		Path p = Paths.get("tetris.properties");
		InputStream is = Files.newInputStream(p, StandardOpenOption.READ);
		props.load(is);
		//set up screen
		grid.setHgap(4);
		grid.setVgap(4);
		grid.setPrefColumns(Integer.parseInt(props.getProperty("width")));
		grid.setPrefRows(Integer.parseInt(props.getProperty("height")));
		grid.setPrefTileHeight(20);
		grid.setPrefTileWidth(20);
		//Pane tilePane = (Pane)FXMLLoader.load(getClass().getResource("src/com/gd/tetris/view/GameGrid.fxml"));
		
		Rectangle r = new Rectangle(25,25,20,20);
	    r.setFill(Color.BLUE);
	    grid.getChildren().add(r);
	    Rectangle r2 = new Rectangle(25,25,20,20);
	    r2.setFill(Color.RED);
	    grid.getChildren().add(r2);

	}
	
	private void log(String msg) {
		System.out.println(msg);
	}
	
}